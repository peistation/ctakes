    <externalResourceDependency>
      <key>RxnormIndexReader</key>
      <description/>
      <interfaceName>org.apache.ctakes.core.resource.LuceneIndexReaderResource</interfaceName>
      <optional>false</optional>
    </externalResourceDependency>
    <externalResourceDependency>
      <key>OrangeBookIndexReader</key>
      <description/>
      <interfaceName>org.apache.ctakes.core.resource.LuceneIndexReaderResource</interfaceName>
      <optional>false</optional>
